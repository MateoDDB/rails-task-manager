<h1>Tasks</h1>

<ol>
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" name="check">
      <%= link_to task.title, task_path(task)%>
      <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ol>

<%= link_to "Add task", new_task_path %>
